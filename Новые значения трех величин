//Новые значения трех величин

//Дано три различных по значению числовые величины. Если величины расположены в порядке возрастания, удвойте каждую величину, 
//иначе присвойте каждой величине противоположное значение.
//Напишите функцию с именем newValues, которая принимает три различных числа a, b, c в качестве аргументов и 
//возвращает измененные значения в виде массива [a, b, c].

//Примеры:

//функция newValues(5, 6, 7) должна возвратить [10, 12, 14];
//функция newValues(3, 0, -1) должна возвратить [-3, 0, 1];
//функция newValues(-1, -2, 5) должна возвратить [1, 2, -5]].


function newValues(a, b, c){
  let result = [];
    if (a < b && b < c) {
      result.push(a * 2, b * 2, c * 2);
    } else {
      result.push(-a, -b, -c);
    }
    return result;
}
